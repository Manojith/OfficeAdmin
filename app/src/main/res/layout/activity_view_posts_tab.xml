<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewPostsTab"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="View the tickets that you've received !"
        android:textColor="#1CB3F7"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/sentPosts"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        app:srcCompat="@drawable/noarchiveposts" />

    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Oops! No posts available right now :)"
        android:textColor="#FD440B"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/postsListView"
        android:layout_width="409dp"
        android:layout_height="680dp" />
</LinearLayout>